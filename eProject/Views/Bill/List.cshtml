@{
    ViewBag.Title = "Bill management";
}
@section styles {
    <link rel="stylesheet" href="~/Content/Css/Bill/List.css" />
}

<div class="container">
    <h1 class="page-title">
        <i class="fa-solid fa-money-bill"></i>
        Bills your account
    </h1>

    <nav class="topNav">
        <a class="topNav-btnItem" href="/Account/Detail/?accountID=@ViewBag.AccountID">
            <i class="fa-solid fa-arrow-left"></i>
            Back
        </a>
    </nav>

    <div class="dataBox">
        <h3 class="dataBox-heading">
            List bills
        </h3>

        <div class="bills">
            @if (ViewBag.bills.Count == 0)
            {
                <h2 class="noBills">Have no any bill</h2>
            }
            @foreach (eProject.Models.Bill bill in ViewBag.bills)
            {
                <div class="billItem">
                    <div class="row">
                        <div class="col-xl-10">
                            <h4 class="billItem-lineStrong">
                                Account ID:
                                @bill.AccountID
                            </h4>
                            <p class="billItem-line">
                                Status:
                                @if (bill.Status.Equals("Paid"))
                                {
                                    @bill.Status
                                    <i style="color: #a4c639;" class="fa-solid fa-check-double"></i>
                                }
                                else
                                {
                                    @bill.Status
                                    <i style="color: #ff033e;" class="fa-solid fa-xmark"></i>
                                }
                            </p>
                            <p class="billItem-line">
                                Initial Due Amount: @bill.InitialDueAmount $
                            </p>
                            <p class="billItem-line">
                                Discount: @(bill.Discount * 100) %
                            </p>
                            <p class="billItem-line">
                                VAT Cost: @bill.VatCost $
                            </p>
                            <p class="billItem-line">
                                Amount Paid: @bill.AmountPaid $
                            </p>
                            <p class="billItem-line">
                                Paid Content: @bill.PaidContent
                            </p>
                            <p class="billItem-line">
                                Created Date: @bill.CreatedDate.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                        <div class="col-xl-2">
                            
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>