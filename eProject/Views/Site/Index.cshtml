@{
    ViewBag.Title = "Home Page";
}
@section styles {
    <link rel="stylesheet" href="~/Content/Css/Site/Index.css" />
}

<div class="container">
    <div class="introduce">
        <h1 class="introduce-name">
            Nexus
        </h1>
        <h1 class="introduce-text">
            choose your service
        </h1>
    </div>

    <div class="content-section">
        <h1 class="content-sectionTitle">
            What makes customers always trust and use Nexus service?
        </h1>

        <div class="row mt-5">
            <div class="col-xl-4">
                <img src="~/Content/Images/subimage.png" alt="Img section" style="width: 100%" />
            </div>
            <div class="col-xl-8">
                <span style="font-size: 1.6rem; font-weight: 400">
                    High and stable internet access speed. Owning more than 365,000 km of fiber optic cable and many fiber optic lines connecting internationally at sea and on land, ensuring the best service for customers. Applying the most advanced technologies to bring maximum experience to customers during service use (mesh wifi, xGSPON, Camera AI...)
                </span>
            </div>
        </div>
    </div>

    <div class="content-section">
        <h1 class="content-sectionTitle">
            <i class="fa-solid fa-globe"></i>
            Current Nexus services
        </h1>

        @foreach (eProject.Models.Service item in ViewBag.services)
        {
            <div class="serviceItem">
                <div class="row">
                    <div class="col-xl-4">
                        <img style="width: 100%;" class="serviceItem-thumbnail" src="~/Uploads/ServiceThumbnails/@item.Thumbnail" alt="Service Thumbnail" />
                    </div>
                    <div class="col-xl-8">
                        <h2 class="serviceItem-name">
                            @item.ServiceName
                        </h2>
                        <p class="serviceItem-summary">
                            @item.Summary
                        </p>
                        <p class="serviceItem-deposit">
                            With a deposit of <span class="serviceItem-depositValue">@item.Deposit $</span>
                        </p>
                        <a href="/Service/Detail?serviceID=@item.ServiceID" class="serviceItem-detailBtn">
                            View Detail
                            <i class="fa-solid fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="content-section">
        <h1 class="content-sectionTitle">
            <i class="fa-solid fa-question"></i>
            Reasons why you should use our service
        </h1>

        <div class="reasons">
            <div class="row">
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Flexibility when working remotely thanks to telecommunications services
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Nexus is ready to serve customers 24/7
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Support development and improve productivity in business through telecommunications
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Nexus has always cared about customer experience
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Always respect, listen to customers to change and serve the most perfect product, service
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Develop and adapt quickly to the new technology era 4.0
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Telecommunications services bring the most advanced communication methods to customers
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="reasonItem">
                        <i class="fa-regular fa-square-check"></i>
                        Flexible and diverse pricing policy suitable for all customers
                    </div>
                </div>
               
                </div>
            </div>
        </div>

